{
  "name": "koa-fullstack",
  "version": "0.0.1",
  "description": "基于Koa和Vite的全栈框架",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:vite": "vite",
    "dev:server": "tsx watch  --tsconfig ./tsconfig.dev.json ./src/app.ts",
    "build": "npm run build:vite && npm run build:server",
    "build:vite": "vite build",
    "build:server": "tsc --project tsconfig.build.json",
    "start": "cross-env NODE_ENV=production node ./output/app.js"
  },
  "keywords": [
    "koa",
    "koa.js",
    "vite",
    "csr",
    "fullstack",
    "web"
  ],
  "author": "Stary",
  "license": "ISC",
  "devDependencies": {
    "@types/koa": "^2.13.12",
    "@types/koa-generic-session": "^2.2.4",
    "@types/koa-mount": "^4.0.5",
    "@types/koa-static": "^4.0.4",
    "@vitejs/plugin-vue": "^4.5.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "koa": "^2.14.2",
    "koa-generic-session": "^2.3.1",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "koa-tree-router": "^0.12.1",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  }
}